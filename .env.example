# Environment variables for TALC Photo Screener
# Copy this file to .env.local and fill in your actual values

# ============================================
# Frontend Environment Variables (Vite)
# ============================================
# Note: Vite requires VITE_ prefix for frontend env vars

# TALC API Key (for frontend, visible in browser - use proxy in production)
VITE_TALC_API_KEY=your_talc_api_key_here

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# ============================================
# Backend Environment Variables (Netlify Functions)
# ============================================

# TALC API Key (server-side)
TALC_API_KEY=your_talc_api_key_here

# Allowed CORS origins (comma-separated)
TALC_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-production-domain.com

# Google Gemini API Key (for AI analysis)
GEMINI_API_KEY=your_gemini_api_key_here
API_KEY=your_gemini_api_key_here

# Firebase Project ID (for Firestore access)
FIREBASE_PROJECT_ID=your-project-id
